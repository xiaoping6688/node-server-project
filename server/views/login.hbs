<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>前台管理系统 | 登录</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="{{resoucePath}}/libs/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="{{resoucePath}}/libs/font-awesome/css/font-awesome.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="{{resoucePath}}/libs/ionicons/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="{{resoucePath}}/css/AdminLTE.min.css">
  <link rel="stylesheet" href="{{resoucePath}}/libs/iCheck/square/blue.css">
  <style>
    .login-box {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }
  </style>

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="{{resoucePath}}/libs/html5shiv.min.js"></script>
    <script src="{{resoucePath}}/libs/respond.min.js"></script>
  <![endif]-->
</head>

<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <b><a href="#" target="_blank">LOGO</a>前台业务系统</b>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">账号登录</p>
    <form onsubmit="return false;">
      <div class="form-group has-feedback">
        <input id="username" type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input id="password" type="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8"></div>
        <!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <a href="#" class="text-center">忘记密码</a>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 2.2.3 -->
<script src="{{resoucePath}}/libs/jQuery/jquery-2.2.3.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="{{resoucePath}}/libs/bootstrap/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="{{resoucePath}}/libs/iCheck/icheck.min.js"></script>
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });

  $("form").on("submit", function(){
    var username = $("#username").val().trim();
    var password = $("#password").val();
    var args = {
      username: username,
      password: password
    };

    $.get('/rest/user/login', args, function (response) {
      if (!response || !response.status) return;

      if (response.status.code == 0) {
        window.sessionStorage.token = response.data.token;
        window.sessionStorage.user = response.data.user;
        window.location.href = '/';
      } else {
        alert(response.status.msg);
      }
    })
  });
</script>
</body>
</html>
